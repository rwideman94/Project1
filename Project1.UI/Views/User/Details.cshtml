@model Project1.UI.ViewModels.UserVM

@{
    ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

<div>
    <table class="table">
        <tr>
            <td class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Email)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.User.Email)
            </td>
        </tr>
        <tr>
            <td class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.FirstName)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.User.FirstName)
            </td>
        </tr>
        <tr>
            <td class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.LastName)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.User.LastName)
            </td>
        </tr>
        <tr>
            <td class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.DOB)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.User.DOB)
            </td>
        </tr>
        <tr>
            <td class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.City)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.User.City)
            </td>
        </tr>
        <tr>
            <td class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.State)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.User.State)
            </td>
        </tr>
        <tr>
            <td class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.PhoneNumber)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.User.PhoneNumber)
            </td>
        </tr>
        <tr>
            <td class="col-sm-2">
                @Html.DisplayNameFor(model => model.User.Overdraft)
            </td>
            <td class="col-sm-10">
                @Html.DisplayFor(model => model.User.Overdraft)
            </td>
        </tr>
    </table>
    <h4>Overdraft Payment History</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Payment amount
                </th>
                <th>
                    Payment Date/Time
                </th>
                <th>
                    Details
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Payments)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Details)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
