@model Project1.Models.Accts.BusinessAccount

@{
    ViewData["Title"] = "Close Account";
}

<h1>Close Business Account</h1>


<div>
    @if (Model.Balance == 0)
    {
        <h3>Are you sure you want to close this account?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Balance)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Balance)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InterestRate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InterestRate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
        </dl>
        <form asp-action="Close">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Close" class="btn btn-danger" /> |
            <a asp-action="Index">Back to List</a>
        </form>
    }
    else
    {
        <h3>You can't close an account with a non-zero balance.</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Balance)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Balance)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InterestRate)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InterestRate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DateCreated)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateCreated)
            </dd>
        </dl>
        <a asp-action="Index">Back to List</a>
    }
</div>
