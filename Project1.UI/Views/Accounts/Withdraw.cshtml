@model Project1.UI.ViewModels.WithdrawlVM

    <h1>Withdraw</h1>

    <h3>How much would you like to Withdraw?</h3>
    <h5>@Model.Balance in Account</h5>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Withdraw">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Balance" class="form-control" hidden />
            <input asp-for="AccountType" class="form-control" hidden />
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            @if (Model.AccountType == "Business")
            {
                <p>Business accounts can overdraft.</p>
                <p>Overdraft charges are charged to your profile in the amount of 25% of the negative account balance.</p>
            }
            <div class="form-group">
                <input type="submit" value="Withdraw" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
