@model Project1.Models.TermDeposit

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
@if (Model.Withdrawn)
{
<h2 class="text-danger">This Term Deposit has already been withdrawn</h2>
}
<div>
    <h4>Term Deposit #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.WithdrawlAmount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WithdrawlAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TermYears)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TermYears)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateCreated)
        </dd>
    </dl>
</div>
@if (!Model.Withdrawn)
{
<div>
    <a asp-action="Withdraw" asp-route-id="@Model.Id">Withdraw</a> |
    <a asp-action="Index">Back to List</a>
</div>
}
else
{
<div>
    <a asp-action="Index">Back to List</a>
</div>
}
